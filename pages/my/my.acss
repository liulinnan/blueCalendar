.view-data view{
  color: #333;
  font-size: 28rpx;
  line-height: 109rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #dedede;
  cursor: pointer;
}
.view-data text{
  line-height: 109rpx;
  /*font-size: 28rpx; */
  display: block;
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #9a9a9a;
  border-right: 3rpx solid #9a9a9a;
  transform: rotate(45deg);
  margin-top: 45rpx;
  margin-right: 2rpx;
}
.view-data view:last-of-type{
  border: none;
}