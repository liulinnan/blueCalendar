  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  padding-right: 0;
}
.my-container .user-data{
  display: flex;
  align-items: center;
}
.user-data image{
  width: 118rpx;
  height: 118rpx;
  border-radius: 50%;
  margin-left: 15rpx;
  margin-right: 50rpx;
}
.user-data .user-name text{
  color: #333;
  font-size: 36rpx;
}
.user-data .user-name view{
  font-size: 26rpx;
  margin-top: 18rpx;
}
.user-data .user-name .green{
  color: #11b35d;
  font-size: 26rpx;
  margin-left: 14rpx;
  font-weight: bold;
}
